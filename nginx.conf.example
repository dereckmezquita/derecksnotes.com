# Example nginx configuration for derecksnotes.com
# Copy and adapt this to your nginx sites-available configuration

# Production: derecksnotes.com
server {
    listen 80;
    listen [::]:80;
    server_name derecksnotes.com www.derecksnotes.com;

    # Redirect to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name derecksnotes.com www.derecksnotes.com;

    # SSL configuration (update paths as needed)
    ssl_certificate /etc/letsencrypt/live/derecksnotes.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/derecksnotes.com/privkey.pem;

    # API routes -> Express server
    location /api/ {
        proxy_pass http://localhost:3001;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Everything else -> Next.js
    location / {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }
}

# Dev: dev.derecksnotes.com
server {
    listen 80;
    listen [::]:80;
    server_name dev.derecksnotes.com;

    return 301 https://$server_name$request_uri;
