# Possible values: 'PROD' | 'DEV' | 'LOCAL'
BUILD_ENV='LOCAL'

# Port configurations - only specific ports are allowed
# Server: '3001' | '3003' (3001 for dev, 3003 for prod)
PORT_SERVER=3001
# Client: '3000' | '3002' (3000 for dev, 3002 for prod)
PORT_CLIENT=3000

# Domain - used to construct BASE_URL for client/server
# Possible values: 'derecksnotes.com' | 'dev.derecksnotes.com' | 'localhost'
DOMAIN='localhost'

# ---
# Session secret - used for cookie encryption (generate a strong unique value)
SESSION_SECRET='replace_with_a_secure_random_string'

# ---
# MongoDB configuration
# Can be IP address or container name when using Docker 
MONGO_URI='127.0.0.1'
MONGO_PASSWORD='your_password_here'
MONGO_DATABASE='local_derecksnotes'

# ---
# Redis configuration
# Format: redis://hostname:port
REDIS_URI='redis://localhost:6379'

# ---
# API keys for external services
# SendGrid for email delivery
SENDGRID_API_KEY='your_sendgrid_api_key_here'