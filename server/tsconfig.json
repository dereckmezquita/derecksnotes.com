{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["./src/utils/*"],
      "@models/*": ["./src/models/*"],
    },
    "typeRoots": [
      "./@types/**/*",
      "../shared/@types/**/*"
    ]
  },
  "include": ["src/**/*.ts", "../shared/**/*.ts"],
  "exclude": ["node_modules"],
  // allow inclusion of ts outside of rootDir using ts-node
  "ts-node": {
    "files": true
  }
}
