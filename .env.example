# Docker Compose Environment Variables
# Copy this file to .env and fill in the values
# These are used by docker-compose.yml for container deployment

# Docker image names (from Docker Hub)
IMAGE_NAME_SERVER=your-dockerhub-username/derecksnotes-server:latest_dev
IMAGE_NAME_CLIENT=your-dockerhub-username/derecksnotes-client:latest_dev

# Container names
CONTAINER_NAME_SERVER=dev_linode_derecksnotes-server
CONTAINER_NAME_CLIENT=dev_linode_derecksnotes-client

# Port mappings (host:container)
# DEV: 3001 for server, 3000 for client
# PROD: 3003 for server, 3002 for client
PORT_MAP_SERVER=3001
PORT_MAP_CLIENT=3000
